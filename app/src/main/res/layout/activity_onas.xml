<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/up2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/textView22"
        android:fontFamily="@font/montserrat"
        android:text="Информ"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="60dp"
        android:minHeight="48dp"
        android:text="Позвонить"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sidebar"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorbg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="60dp"
            android:contentDescription="bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/hot_deal" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:rotation="270"
            android:shadowColor="@color/black"
            android:text="Контакты"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/onas"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="270"
            android:text="Про нас"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/main"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:rotation="270"
            android:text="Главная"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/onas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.91" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="596dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Юг"
        android:textColor="@color/coloryug"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/sda4aot4etnosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_title"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/montserrat"
        android:text="Сдача отчетности через интернет"
        android:textColor="@color/purple_200" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="306dp"
        android:layout_height="239dp"
        android:layout_above="@+id/call_button"
        android:layout_below="@+id/sda4aot4etnosti"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/sidebar"
        android:background="@drawable/rounded_shape"
        android:elevation="2dp"
        android:paddingLeft="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <!-- Контент для прокрутки вниз -->


            <TextView
                android:id="@+id/service_list1"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Группа компаний бухгалтерских услуг «Юг-Информ г. Краснодар и Краснодарский край» осуществляет все виды бухгалтерских услуг:\n\nСдачу отчетности в ИФНС (налоговую инспекцию).\nПФР (пенсионный фонд), ФСС (фонд социального страхования), РАР (Росалкогольрегулирование), статистическую отчетность (Росстат), экологическая отчетность (Росприроднадзор), отчетность в Службу Занятости, ведение, постановка и восстановление бухучета, кадровый учет.\n\nМного лет помогаем людям, имеем филиалы по Краснодарскому краю.\n\nК нам обращаются клиенты, которые работают во всех регионах России, в связи с расширением мы запустили также «помощь онлайн», обрабатываем заявки без посещения офиса через наш портал, наши операторы всегда помогут подготовить Вам документы."
                android:textColor="@color/black"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="206dp"
                android:layout_height="142dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/nalogi" />


        </LinearLayout>
    </ScrollView>




</RelativeLayout>
