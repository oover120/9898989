<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/textView22"
        android:fontFamily="@font/montserrat"
        android:text="Информ"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="60dp"
        android:minHeight="48dp"
        android:text="Позвонить"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sidebar"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorbg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="60dp"
            android:contentDescription="bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/hot_deal" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="270"
            android:shadowColor="@color/black"
            android:text="Контакты"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/onas"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:rotation="270"
            android:text="Про нас"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/main"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:rotation="270"
            android:text="Главная"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/onas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.91" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="596dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Юг"
        android:textColor="@color/coloryug"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/sda4aot4etnosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_title"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="571dp"
        android:fontFamily="@font/montserrat"
        android:text="Сдача отчетности через интернет"
        android:textColor="@color/purple_200" />


    <TextView
        android:id="@+id/contacttext"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="121dp"
        android:fontFamily="@font/montserrat"
        android:text="Контакты +7 (918) 274-45-54"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="235dp"
        android:layout_height="229dp"
        android:layout_above="@+id/imageView4"
        android:layout_below="@+id/message"
        android:layout_alignParentStart="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="@dimen/margin_start"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/margin_end"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/montserrat"
        android:scrollbars="vertical"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacttext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="дреса"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="266dp"
        android:layout_height="109dp"
        android:layout_above="@+id/call_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="2dp"
        app:srcCompat="@drawable/pict_2" />

</RelativeLayout>
